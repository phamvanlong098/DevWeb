<link rel="stylesheet" href="http://localhost:3000/css/loginscreen.css">
<link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
<title>Đăng nhập</title>

<div class="main">
    <div class="logo-area">
        <a class="backward" href="#"><i class="fas fa-chevron-left"></i> Quay lại</a>
        <div class="logo"></div>
    </div>
    <p class="sign" align="center">Đăng nhập</p>
    <form class="form1" method="POST">
        <input class="un" type="text" name="username" id="un" align="center" placeholder="Tài khoản">
        <input class="pass" type="password" name="password" id="pass" align="center" placeholder="Mật khẩu">
        <p class="sign" align="center" id="error">Vui lòng điền đủ thông tin</p>
        <button class="submit" align="center" href="/" onclick="return error()">Đăng nhập</button>
        <p class="forgot" align="center"><a href="#">Quên mật khẩu?</a></p>
    </form>
</div>
<script type="text/javascript" src="http://localhost:3000/js/loginscreen.js"></script>
<script>
    document.querySelector('a.backward').onclick = function() {
        window.history.back();
    }
</script>
